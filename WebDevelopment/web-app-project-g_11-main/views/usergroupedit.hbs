<div class="col-sm-10">
    <h2>Edit Group</h2>
    <form method="post">
        <div class="row">
            <div class="col">
                <input type="text" class="form-control" placeholder={{name}} name="name">
            </div>
            <div class="col">
                <input type="text" class="form-control" placeholder={{description}} name="description">
            </div>
            <div class="col">
                <input type="submit" class="form-control btn-primary">
            </div>
        </div>
    </form>
    <br>
    <hr>
    <p>Games:</p>
    <ul>
        {{#each games}}
        <li>
            <p>Name: {{name}}</p>
            <p><a href="/gameinfo/{{id}}">Full info</a></p>
        </li>
        {{/each}}
    </ul>
</div>