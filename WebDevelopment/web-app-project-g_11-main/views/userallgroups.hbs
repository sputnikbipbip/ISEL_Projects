<script src="/delete-group.js" type="text/javascript"></script>

<div class="col-sm-10">
    <button onclick="location.href = '/users/{{user}}';" id="myButton">User Info</button>
    <h2>New group:</h2>
    <form method="post">
        <div class="row">
            <div class="col">
                <input type="text" class="form-control" placeholder="Name" name="name">
            </div>
            <div class="col">
                <input type="text" class="form-control" placeholder="Description" name="description">
            </div>
            <div class="col">
                <input type="submit" class="form-control btn-primary">
            </div>
        </div>
    </form>
    <br>
    <hr>
    <h2>{{user}}'s Groups</h2>
    <ol>
        {{#each groups}}
        <li>
            <p><button class="btn btn-danger" data-group-id="{{id}}">DELETE</button></p>
            <p>Name: {{name}}</p>
            <p>Description: {{description}}</p>
            <p><a href="/users/{{owner}}/groups/{{id}}">Full info</a></p>
        </li>
        {{/each}}
    </ol>
</div>